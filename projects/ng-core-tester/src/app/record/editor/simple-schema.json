{
  "schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Test editor",
  "additionalProperties": false,
  "required": [
    "optional",
    "required",
    "essential",
    "textarea",
    "select",
    "password",
    "markdown",
    "treeSelect",
    "datePicker",
    "array_with_multicheckbox_inline",
    "array_with_multicheckbox_stacked",
    "remoteAutocompleteWithoutFilters",
    "selectWithSort",
    "selectMultiple"
  ],
  "propertiesOrder": [
    "optional",
    "required",
    "essential",
    "textarea",
    "select",
    "password",
    "markdown",
    "treeSelect",
    "datePicker",
    "array_with_multicheckbox_inline",
    "array_with_multicheckbox_stacked",
    "remoteAutocompleteWithoutFilters",
    "selectWithSort",
    "selectMultiple"
  ],
  "properties": {
    "$schema": {
      "title": "Schema",
      "type": "string",
      "minLength": 9,
      "default": "https://bib.rero.ch/schemas/demo/demo.json"
    },
    "pid": {
      "title": "Demo ID",
      "type": "string",
      "minLength": 1
    },
    "optional": {
      "title": "Optional",
      "type": "string",
      "minLength": 3
    },
    "required": {
      "title": "Required",
      "type": "string",
      "minLength": 3,
      "widget": {
        "formlyConfig": {
          "props": {
            "doNotSubmitOnEnter": true
          }
        }
      }
    },
    "essential": {
      "title": "Essential",
      "type": "string",
      "minLength": 3,
      "widget": {
        "formlyConfig": {
          "props": {
            "hide": true,
            "navigation": {
              "essential": true
            }
          }
        }
      }
    },
    "textarea": {
      "title": "Textarea",
      "type": "string",
      "widget": {
        "formlyConfig": {
          "type": "textarea",
          "props": {
            "placeholder": "Type your text here",
            "displayChars": true,
            "displayWords": true,
            "limitChars": 200,
            "limitWords": 10,
            "rows": 5
          }
        }
      }
    },
    "select": {
      "title": "Product",
      "type": "string",
      "widget": {
        "formlyConfig": {
          "type": "select",
          "props": {
            "options": [
              { "label": "House", "value": "house" },
              { "label": "Car", "value": "car" },
              { "label": "Window", "value": "window" }
            ]
          }
        }
      }
    },
    "password": {
      "title": "Password",
      "type": "string",
      "minLength": 20,
      "widget": {
        "formlyConfig": {
          "type": "passwordGenerator",
          "props": {
            "enabledEditMode": true
          }
        }
      }
    },
    "markdown": {
      "title": "Markdown",
      "type": "string",
      "minLength": 1,
      "widget": {
        "formlyConfig": {
          "type": "markdown",
          "props": {
            "minHeight": "300px"
          }
        }
      }
    },
    "treeSelect": {
      "title": "Select with option tree",
      "type": "string",
      "widget": {
        "formlyConfig": {
          "type": "tree-select",
          "props": {
            "options": [
              {
                "key": "node1",
                "label": "Node 1",
                "data": "node1"
              },
              {
                "key": "node2",
                "label": "Node 2",
                "selectable": false,
                "children": [
                  {
                    "key": "node3",
                    "label": "Node 3",
                    "data": "node3"
                  },
                  {
                    "key": "node4",
                    "label": "Node 4",
                    "selectable": false,
                    "children": [
                      {
                        "key": "node5",
                        "label": "Node 5",
                        "data": "node5"
                      },
                      {
                        "key": "node6",
                        "label": "Node 6",
                        "data": "node6"
                      }
                    ]
                  }
                ]
              },
              {
                "key": "node7",
                "label": "Node 7",
                "data": "node7"
              }
            ]
          }
        }
      }
    },
    "datePicker": {
      "title": "Date picker",
      "type": "string",
      "format": "date",
      "pattern": "^[0-9]{4}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])$",
      "widget": {
        "formlyConfig": {
          "type": "datePicker",
          "props": {
            "dateFormat": "dd.mm.yy",
            "placement": "top"
          }
        }
      }
    },
    "array_with_multicheckbox_inline": {
      "title": "Array with multiple checkbox (inline)",
      "type": "multicheckbox",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": [
          "checkbox1",
          "checkbox2",
          "checkbox3",
          "checkbox4"
        ]
      },
      "widget": {
        "formlyConfig": {
          "type": "multi-checkbox",
          "props": {
            "style": "inline",
            "options": [
              {
                "label": "Checkbox 1",
                "value": "checkbox1",
                "disabled": true
              },
              {
                "label": "Checkbox 2",
                "value": "checkbox2"
              },
              {
                "label": "Checkbox 3",
                "value": "checkbox3"
              },
              {
                "label": "Checkbox 4",
                "value": "checkbox4"
              }
            ]
          }
        }
      }
    },
    "array_with_multicheckbox_stacked": {
      "title": "Array with multiple checkbox (stacked)",
      "type": "multicheckbox",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": [
          "checkbox1",
          "checkbox2",
          "checkbox3",
          "checkbox4"
        ]
      },
      "widget": {
        "formlyConfig": {
          "type": "multi-checkbox",
          "props": {
            "style": "stacked",
            "options": [
              {
                "label": "Checkbox 1",
                "value": "checkbox1",
                "disabled": true
              },
              {
                "label": "Checkbox 2",
                "value": "checkbox2"
              },
              {
                "label": "Checkbox 3",
                "value": "checkbox3"
              },
              {
                "label": "Checkbox 4",
                "value": "checkbox4"
              }
            ]
          }
        }
      }
    },
    "remoteAutocompleteWithoutFilters": {
      "title": "Remote Autocomplete without filters",
      "type": "string",
      "widget": {
        "formlyConfig": {
          "type": "remoteAutoComplete",
          "props": {
            "group": true,
            "scrollHeight": "300px",
            "queryOptions": {
              "type": "documents",
              "maxOfResult": 10
            }
          }
        }
      }
    },
    "selectWithSort": {
      "title": "Select with sort",
      "type": "string",
      "enum": [
        "baobab",
        "cypress",
        "epicea",
        "larch",
        "tree"
      ],
      "widget": {
        "formlyConfig": {
          "props": {
            "sort": true,
            "sortOrder": "asc",
            "options": [
              {
                "label": "Tree",
                "value": "tree"
              },
              {
                "label": "Baobab",
                "value": "baobab"
              },
              {
                "label": "Cypress",
                "value": "cypress"
              },
              {
                "label": "Epicea",
                "value": "epicea"
              },
              {
                "label": "Larch",
                "value": "larch"
              }
            ]
          }
        }
      }
    },
    "selectMultiple": {
      "title": "Select Multiple",
      "type": "array",
      "minItems": 1,
      "uniqueItems": true,
      "items": {
        "type": "string",
        "enum": [
          "value1",
          "value2",
          "value3"
        ]
      },
      "widget": {
        "formlyConfig": {
          "type": "multi-select",
          "props": {
            "sort": true,
            "options": [
              {
                "label": "Value 2",
                "value": "value2"
              },
              {
                "label": "Value 1",
                "value": "value1"
              },
              {
                "label": "Value 3",
                "value": "value3"
              }
            ]
          }
        }
      }
    }
  }
}
